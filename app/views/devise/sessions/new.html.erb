<h2>Log in</h2>
<div class="container" style="-webkit-box-shadow: 5px 5px 5px 5px #363636;
box-shadow: 1px 1px 1px 1px #363636;">
<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.text_field :username, required: true, autofocus: true %>
    <%= f.password_field :password, required: true %>
    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
